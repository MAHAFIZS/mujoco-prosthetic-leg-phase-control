<mujoco model="dummy_man_robot_leg">
  <compiler angle="radian"/>
  <option timestep="0.002" gravity="0 0 -9.81" integrator="RK4"/>
  <size njmax="2000" nconmax="200"/>

  <default>
    <geom friction="1.0 0.1 0.1" density="800" rgba="0.6 0.6 0.6 1"/>
    <joint damping="2" armature="0.01" limited="true"/>
  </default>

  <worldbody>
    <!-- ground -->
    <geom name="floor" type="plane" size="5 5 0.1" rgba="0.2 0.2 0.2 1"/>

    <!-- dummy human body -->
    <body name="dummy" pos="0 0 1.1">
      <!-- torso -->
      <geom name="torso" type="capsule" fromto="0 0 0.4  0 0 0.9" size="0.12" rgba="0.8 0.8 0.8 1"/>
      <!-- pelvis block -->
      <geom name="pelvis" type="box" pos="0 0 0.35" size="0.12 0.08 0.06" rgba="0.7 0.7 0.7 1"/>

      <!-- robot leg attached to pelvis -->
      <body name="robot_leg" pos="0 -0.08 0.32">
        <!-- hip joint -->
        <joint name="hip" type="hinge" axis="0 1 0" range="-1.4 0.6"/>
        <geom name="thigh" type="capsule" fromto="0 0 0  0 0 -0.45" size="0.06" rgba="0.2 0.2 0.2 1"/>

        <body name="shank" pos="0 0 -0.45">
          <joint name="knee" type="hinge" axis="0 1 0" range="-2.4 0.0"/>
          <geom name="shank_geom" type="capsule" fromto="0 0 0  0 0 -0.45" size="0.05" rgba="0.15 0.15 0.15 1"/>

          <body name="foot" pos="0 0 -0.45">
            <joint name="ankle" type="hinge" axis="0 1 0" range="-0.8 0.8"/>
            <!-- foot sole -->
            <geom name="sole" type="box" pos="0.05 0 -0.04" size="0.14 0.06 0.03" rgba="0.1 0.2 0.8 1"/>
            <!-- toe contact -->
            <geom name="toe" type="capsule" fromto="0.12 0 -0.04  0.20 0 -0.04" size="0.03" rgba="0.1 0.2 0.8 1"/>
          </body>
        </body>
      </body>

      <!-- optional: a passive “other leg” just for balance (very simple) -->
      <body name="other_leg" pos="0 0.08 0.32">
        <joint name="other_hip" type="hinge" axis="0 1 0" range="-0.5 0.5" damping="5"/>
        <geom type="capsule" fromto="0 0 0  0 0 -0.85" size="0.05" rgba="0.6 0.6 0.6 1"/>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor name="hip_motor" joint="hip" gear="80"/>
    <motor name="knee_motor" joint="knee" gear="120"/>
    <motor name="ankle_motor" joint="ankle" gear="60"/>
  </actuator>
</mujoco>
